category = {
	name = "DH_Speeches"
	
	soundeffects = {
		ENG_Munich_Agreement_Soundeffect
		GER_Reichstag_Fire_Soundeffect
		GER_Remilitarization_of_the_Rhineland_Soundeffect
		ENG_We_Shall_Never_Surrender_Soundeffect
		GER_Death_of_Hindenburg_Soundeffect
		GER_Book_Burning_Soundeffect
	}
	
	compressor = {
		enabled = yes
		pregain = 3.0
		postgain = 1.0
		ratio = 2.0
		threshold = -10.0
		attacktime = 0.03
		releasetime = 0.0
	}
}

sound = {
	name = "ENG_Munich_Agreement"
	file = "sound_effects/ENG_Munich_Agreement.wav"
	always_load = yes
}

soundeffect = {
	name = ENG_Munich_Agreement_Soundeffect
	volume = 1
	sounds = {
		sound = ENG_Munich_Agreement
	} 
}

